# Headers para produtos SSR - apenas para social bots
/produto/:id
  X-User-Agent: (facebookexternalhit|twitterbot|pinterest|googlebot|linkedinbot|slackbot|whatsapp|bingbot|yandexbot|duckduckbot|baiduspider|embedly)
  Cache-Control: no-cache, no-store, must-revalidate

# Headers para sitemap
/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=3600

/sitemapindex.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=3600

# Headers para robots.txt
/robots.txt
  Content-Type: text/plain
  Cache-Control: public, max-age=3600
